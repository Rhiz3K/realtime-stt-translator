# ============================================================================
# SR Live Translator - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values.
# Lines starting with # are comments.
# ============================================================================

# --- Authentication ---

# Password for accessing the app. Required when AUTH_ENABLED=true.
APP_PASSWORD=change-me

# Enable/disable password login (default: true).
# Set to false to allow anonymous access (useful behind VPN/reverse proxy auth).
AUTH_ENABLED=true

# Separate signing secret for auth cookies (defaults to APP_PASSWORD if empty).
AUTH_SECRET=change-me-too

# Auth cookie name.
AUTH_COOKIE_NAME=srlt_auth

# Auth token TTL in seconds (default: 43200 = 12 hours).
AUTH_TOKEN_TTL_SECONDS=43200

# Force cookie Secure flag (default: auto-detect from request scheme).
# Set to true when behind HTTPS reverse proxy that strips the scheme.
AUTH_COOKIE_SECURE=true

# --- Origins ---

# Restrict allowed WebSocket origins (comma-separated).
# If empty, origin host must match the request Host header.
# ALLOWED_ORIGINS=https://translator.example.com,https://www.translator.example.com
ALLOWED_ORIGINS=

# --- STT Engines ---

# Which engines are available to users. Comma-separated.
# Valid: webspeech, deepgram, elevenlabs
# Disabled engines appear grayed out in the UI.
ENABLED_ENGINES=webspeech,deepgram,elevenlabs

# --- Deepgram ---

# API key from https://console.deepgram.com/
# Required when "deepgram" is in ENABLED_ENGINES.
DEEPGRAM_API_KEY=

# Internal queue size for Deepgram transcription results (default: 100).
DEEPGRAM_RESULT_QUEUE_SIZE=100

# --- ElevenLabs ---

# API key from https://elevenlabs.io/app/settings/api-keys
# Required when "elevenlabs" is in ENABLED_ENGINES (server mode).
# In browser mode users can also provide their own key in the UI.
ELEVENLABS_API_KEY=

# --- Translation ---

# Max accepted input text length per message (default: 5000).
MAX_TEXT_LENGTH=5000

# Timeout for a single googletrans call in seconds (default: 10).
TRANSLATE_TIMEOUT_SECONDS=10

